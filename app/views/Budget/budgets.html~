    });
    
    if($('#budget').val() != "") {
        var value = $('#budget').val().replace(/^\s\s*/, '').replace(/\s\s*$/, '');
        var intRegex = /^\d+$/;
        if(!intRegex.test(value)) {
            alert("Field must be numeric.");
            success = false;
        }
    } else {
    	 alert("This field is blank.");
        success = false;
    }
    
    </script>
